{
  "name": "prismy-cookie",
  "version": "2.0.0",
  "description": ":cookie: Cookie for prismy",
  "keywords": [
    "prismy",
    "cookie"
  ],
  "author": "Junyoung Choi <rokt33r.choi@gmail.com>",
  "homepage": "https://github.com/prismyland/prismy-cookie",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prismyland/prismy-cookie.git"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "prettier --check src/**/*.ts specs/**/*.ts",
    "format": "prettier --write src/**/*.ts specs/**/*.ts",
    "test": "npm run lint && npm run test-type && npm run test-coverage",
    "test-api": "ava --verbose",
    "test-type": "tsc --noEmit",
    "test-coverage": "nyc ava && nyc report --reporter=text-lcov > coverage.lcov",
    "codecov": "codecov",
    "prepublishOnly": "npm run lint && npm test && npm run build"
  },
  "bugs": {
    "url": "https://github.com/prismyland/prismy-cookie/issues"
  },
  "devDependencies": {
    "@types/cookie": "^0.4.0",
    "@types/node": "^14.14.6",
    "@types/test-listen": "^1.1.0",
    "@types/tough-cookie": "^4.0.0",
    "ava": "^3.13.0",
    "codecov": "^3.8.0",
    "got": "^11.8.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "prismy": "^2.0.0",
    "prismy-test": "^2.0.0",
    "rimraf": "^3.0.2",
    "tough-cookie": "^4.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "prismy": ">= 2 < 3"
  },
  "dependencies": {
    "cookie": "^0.4.1",
    "npm-check-updates": "^11.1.9"
  },
  "ava": {
    "files": [
      "specs/*"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ]
  }
}
